<% if @quiz.ended? %>
  <% @podium_classes = "text-8xl mt-2 flex justify-center items-top bg-linear-to-br to-zinc-400 from-gray-300 text-stone-950" %>
  <h1 class="<%= h1_classes %> text-center mb-8">Quiz <%= @quiz.name %> has ended</h1>

  <h2 class="<%= h2_classes %>">Top Three:</h2>
  <div class="grid grid-cols-3 text-center items-end pb-16">
    <div>
      <span class="text-4xl"><%= @quiz.players.order(score: :desc).second&.name %></span>
      <div class="<%= @podium_classes %> h-36 rounded-tl-lg">ðŸ¥ˆ</div>
    </div>
    <div>
      <span class="text-4xl"><%= @quiz.players.order(score: :desc).first&.name %></span>
      <div class="<%= @podium_classes %> h-48 rounded-t-lg">ðŸ¥‡</div>
    </div>
    <div>
      <span class="text-4xl"><%= @quiz.players.order(score: :desc).third&.name %></span>
      <div class="<%= @podium_classes %> h-28 rounded-tr-lg">ðŸ¥‰</div>
    </div>
  </div>

  <h2 class="<%= h2_classes %>">Full scores:</h2>
  <ul>
    <% @quiz.players.order(score: :desc).each do |player| %>
      <li><%= player.name %> - <%= player.score %> points</li>
    <% end %>
  </ul>
<% else %>
  <div class="p-4 rounded-lg bg-white/90 border-2 inline-block">
    <%= @svg.html_safe %>
  </div>

  <h1 class="text-4xl mb-4 font-bold">Quiz "<%= @quiz.name %>" is ready</h1>

  <p class="mb-6">
    Share the join link with players:
    <a href="<%= @join_link %>" class="text-sky-400 underline"><%= @join_link %></a>
  </p>

  <%= turbo_stream_from @quiz %>
  <div id="players_joined">
    <%= render "players_joined", quiz: @quiz %>
  </div>

  <%= button_to 'Start Quiz', start_host_quiz_path, class: "bg-emerald-500/80 hover:bg-emerald-500 xtext-white font-bold py-2 px-4 rounded-lg" %>
<% end %>
