<h2 class="text-2xl mb-4 font-bold"><%= pluralize(quiz.players.buzzed_in.count, "Player") %> Buzzed:</h2>
<%= render "shared/player_grid", players: quiz.players.buzzed_in %>


<div class="flex flex-row gap-4">
  <% if quiz.players.buzzed_in.any? %>
    <%= button_to "Call Fastest Player", call_fastest_player_host_quiz_question_path, method: :post, class: button_classes %>
  <% end %>
  <%= button_to "Next Question", next_host_quiz_question_path, method: :post, class: button_classes(colour: :blue) %>
</div>
